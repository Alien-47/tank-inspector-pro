<!-- 
    do not use {Loc} extension in template name, description and author attribute, as
    they are read without XAML support.
    if you want these attributes localizable, use the composite localization key
    syntax (e.g. #catalog:template_name)
-->
    
<StatTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:c="clr-namespace:System.Collections;assembly=mscorlib"
              Loc.CatalogName="stats_inspector_default_template"
              Template.Name="#stats_inspector_default_template:template_name"
              Template.Description="#stats_inspector_default_template:template_description"
              Template.Author="Smellyriver"
              FontSize="12"
              ColumnWidth="360">

    <StatTemplate.Resources>

        <Style TargetType="TableRowGroup" x:Key="StatTableRowGroup">
            <Setter Property="Stat.TemplateKey" Value="StatTemplate" />
        </Style>
        
        <Style TargetType="TableCell" x:Key="StatCell" />

        <Style TargetType="TableCell" x:Key="StatNameCell" BasedOn="{StaticResource StatCell}">
            <Setter Property="TextAlignment" Value="Left" />
        </Style>

        <Style TargetType="TableCell" x:Key="StatValueCell" BasedOn="{StaticResource StatCell}">
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>

        <Style TargetType="TableCell" x:Key="StatUnitCell" BasedOn="{StaticResource StatCell}">
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Padding" Value="3,0,0,0" />
        </Style>

        <Style TargetType="TableCell" x:Key="GroupedStatNameCell" BasedOn="{StaticResource StatNameCell}">
            <Setter Property="Padding" Value="10,0,0,0" />
            <Setter Property="FontStyle" Value="Italic" />
        </Style>

        <!-- stat templates MUST be defined in Document's Resources element -->
        <c:ArrayList x:Key="StatTemplate">
            <TableRow>
                <TableCell Style="{StaticResource StatNameCell}">
                    <Paragraph>
                        <Run Text="{Binding ShortName, Mode=OneWay}" />
                    </Paragraph>
                </TableCell>
                <TableCell Style="{StaticResource StatValueCell}">
                    <Paragraph>
                        <Run Text="{Binding ValueString, Mode=OneWay}"
                             ToolTip="{Binding Description}"/>
                    </Paragraph>
                </TableCell>
                <TableCell Style="{StaticResource StatUnitCell}">
                    <Paragraph>
                        <Run Text="{Binding Unit, Mode=OneWay}" />
                    </Paragraph>
                </TableCell>
            </TableRow>
        </c:ArrayList>

        <!-- stat template items are APPENDED to target element -->
        <c:ArrayList x:Key="CustomNameStatTemplate">
            <TableCell Style="{StaticResource StatValueCell}">
                <Paragraph>
                    <Run Text="{Binding ValueString, Mode=OneWay}" />
                </Paragraph>
            </TableCell>
            <TableCell Style="{StaticResource StatUnitCell}">
                <Paragraph>
                    <Run Text="{Binding Unit, Mode=OneWay}" />
                </Paragraph>
            </TableCell>
        </c:ArrayList>

        <Style TargetType="Paragraph" x:Key="CategoryTitle">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Typography.Capitals" Value="SmallCaps" />
        </Style>

        <Style TargetType="Table" x:Key="StatCategoryTable">
            <Setter Property="CellSpacing" Value="5" />
        </Style>
        
        <ResourceDictionary x:Key="StatGroupResources">
            <Style TargetType="TableRow">
                <Setter Property="Stat.TemplateKey" Value="CustomNameStatTemplate" />
            </Style>
        </ResourceDictionary>

    </StatTemplate.Resources>


