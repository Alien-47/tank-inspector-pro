<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="FlowDocument">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="ColumnWidth" Value="400" />
    </Style>

    <Style TargetType="Paragraph" x:Key="Title">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Typography.Capitals" Value="SmallCaps" />
    </Style>

    <Style TargetType="Paragraph" x:Key="Title2">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Typography.Capitals" Value="SmallCaps" />
        <Setter Property="Margin" Value="0,10,0,0" />
    </Style>

    <Style TargetType="Paragraph" x:Key="Title3">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Typography.Capitals" Value="SmallCaps" />
    </Style>

    <Style TargetType="Paragraph" x:Key="Comment">
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    <Style TargetType="Paragraph" x:Key="ReferenceVersion">
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    
</ResourceDictionary>